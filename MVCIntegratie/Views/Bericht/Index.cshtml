@model IEnumerable<BL.Domain.Bericht>

@{
    ViewBag.Title = "Index";
}
<link rel="stylesheet" href="~/Content/Layout.css">
<h2>Bericht - Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
   <tr>
      <th>
         @Html.DisplayNameFor(model => model.ID)
      </th>
      <th>
         @Html.DisplayNameFor(model => model.Datum)
      </th>
      <th>
         <p>Longitude</p>
      </th>
      <th>
         <p>Latitude</p>
      </th>
      <th>
         @Html.DisplayNameFor(model => model.Retweet)
      </th>
      <th>
         @Html.DisplayNameFor(model => model.Bron)
      </th>
      <th>
         @Html.DisplayNameFor(model => model.Polariteit)
      </th>
      <th>
         @Html.DisplayNameFor(model => model.Objectiviteit)
      </th>
      <th>
         @Html.DisplayNameFor(model => model.Personen)
      </th>
      <th></th>
   </tr>

@foreach (var item in Model) {
   <tr>
      <td>
         @Html.DisplayFor(modelItem => item.ID)
      </td>
      <td>
         @Html.DisplayFor(modelItem => item.Datum)
      </td>
      <td>
         @Html.DisplayFor(modelItem => item.Longtitude)
      </td>
      <td>
         @Html.DisplayFor(modelItem => item.Latitude)
      </td>
      <td>
         @Html.DisplayFor(modelItem => item.Retweet)
      </td>
      <td>
         @Html.DisplayFor(modelItem => item.Bron)
      </td>
      <td>
         @Html.DisplayFor(modelItem => item.Polariteit)
      </td>
      <td>
         @Html.DisplayFor(modelItem => item.Objectiviteit)
      </td>
      <td>
         @foreach (var persoon in item.Personen)
      {
         @Html.DisplayFor(modelItem => persoon.Naam)
         <br />
   }
      </td>
      <td>
         @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
         @Html.ActionLink("Details", MVC.Bericht.Details(item.ID)) |
         @Html.ActionLink("Delete", "Delete", new { id = item.ID })
      </td>
   </tr>
}

</table>
