@model MVCIntegratie.Models.AdminModel

@{
   Layout = "";
}

<!DOCTYPE html>
<html>
<head>

   <meta charset="utf-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <meta http-equiv="X-UA-Compatible" content="IE=edge">

   <title>Admin</title>

   <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
   <link rel="stylesheet" href="~/Content/Config.css">
   <script src="~/Scripts/jquery-3.0.0.min.js"></script>
   <script>
      $(document).ready(function () {
         var subpage = window.location.href.split('#')[1].replace("%20", " ");
         if (subpage != undefined) {
            showPage(subpage);
         }
         filterPersoon(document.getElementById("filterPersoon").value);
         filterGebruiker(document.getElementById("filterGebruiker").value);
      });
   </script>
</head>
<body>
   <div class="wrapper">
      <nav id="sidebar">
         <a href="@Url.Action("Index", "Home")">
            <div class="sidebar-header">
               <h3>Admin</h3>
               <strong>Ad</strong>
            </div>
         </a>
         <ul class="list-unstyled components">
            <li class="active sidebar">
               <a class="subpageRef" href="javascript:void(0)" data-id="home" onclick="showPage('home')">
                  <i class="glyphicon glyphicon-home"></i>
                  Home
               </a>
            </li>
            <li class="sidebar">
               <a class="subpageRef" href="javascript:void(0)" data-id="gebruikers" onclick="showPage('gebruikers')">
                  <i class="glyphicon glyphicon-user" aria-hidden="true"></i>
                  Gebruikers
               </a>
            </li>
            <li>
               <a class="subpageRef" href="#@ViewContext.RouteData.Values["deelplatform"]" data-id="@ViewContext.RouteData.Values["deelplatform"]" onclick="showPage('@ViewContext.RouteData.Values["deelplatform"]');" aria-expanded="false">
                                    <!--data-toggle="collapse"-->
                  <i class="glyphicon glyphicon-dashboard"></i>
                  @ViewContext.RouteData.Values["deelplatform"]
               </a>
               <!--<ul class="collapse list-unstyled" id="pageSubmenu">
                  <li><a href="@Url.Action("Deelplatform", "Config")">Platform1</a></li>
                  <li><a href="@Url.Action("Deelplatform", "Config")">Platform2</a></li>
                  <li><a href="@Url.Action("Deelplatform", "Config")">Platform3</a></li>
               </ul>-->
            </li>
            <li class="sidebar">
               <a class="subpageRef" href="javascript:void(0)" data-id="alerts" onclick="showPage('alerts')">
                  <i class="glyphicon glyphicon-bell"></i>
                  Alerts
               </a>
            </li>
            <li class="sidebar">
               <a class="subpageRef" href="javascript:void(0)" data-id="faq" onclick="showPage('faq')">
                  <i class="glyphicon glyphicon-question-sign"></i>
                  FAQ
               </a>
            </li>
         </ul>
      </nav>
      <!-- Page Content Holder -->
      <div id="content">
         <nav class="navbar navbar-default">
            <div class="container-fluid">

               <div class="navbar-header">
                  <button type="button" id="sidebarCollapse" class="btn btn-info navbar-btn">
                     <i class="glyphicon glyphicon-align-left"></i>
                     <span>Toggle Sidebar</span>
                  </button>
               </div>

               <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                  <ul class="nav navbar-nav navbar-right">
                     <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                     <li><a href="@Url.Action("Contact", "FYI")">Contact</a></li>
                     <li><a href="@Url.Action("Over", "FYI")">Over</a></li>
                     <li><a href="@Url.Action("FAQ", "FYI")">FAQ</a></li>
                  </ul>
               </div>
            </div>
         </nav>

         <div id="home" class="subpage" style="display:block">
             <h2>Adminpagina - Dashboard Bit By Bit</h2>
             <img src="~/Images/dashboard.png" alt="Dashboard icon" style="width:200px;height:200px;">
             <h3>Hoe gebruik je de admin page:</h3>
             <p>Je kan op de menubalk links van de pagina klikken op een van de 5 opties. </p>
             <p><b>Home pagina:</b> als je hierop klikt, kom je terug op deze pagina.</p>
             <p><b>Gebruikers pagina:</b> als je hierop klikt, krijg je een overzicht van alle gebruikers. Hier kan je ook de info van de gebruikers verander alsook adminrechten toekennen en gebruikers blokeren. </p>
             <p><b>Platformen pagina:</b> als je hierop klikt, kom je op een pagina waar je verschillende deelplatformen kan beheren. Je kan belangrijke personen inlezen met een bestand en kan bepaalde personen ook deactiveren.</p>
             <p><b>Alerts pagina:</b> als je hierop klikt, kom je op een pagina waar je de instellingen van alerts kan aanpassen.</p>
             <p>
                 <b>FAQ pagina:</b> als je hierop klikt, kom je op een pagina waar je bepaalde vragen kan beantwoorden die de gebruikers hebben gesteld. Je kan deze vragen ook rechtstreeks op het deelplatform zetten waarbij ze toebehoren.
                 Je kan bepaalde vragen natuurlijk ook deactiveren zodat deze niet meer op het deelplatform weergegeven worden.
             </p>

             <div class="line"></div>

         </div>

         <div id="gebruikers" class="subpage" style="display:none">
            @Html.Partial("_Gebruikers", Model.Gebruikers)
         </div>


         <div id="@ViewContext.RouteData.Values["deelplatform"]" class="subpage" style="display:none">
            <h2>@ViewContext.RouteData.Values["deelplatform"]</h2>
            @Html.Partial("_Personen", Model.Personen)
         </div>

         <div id="alerts" class="subpage" style="display:none">
            <h2>Alerts</h2>
            <div class="line"></div>
            </div>

         <div id="faq" class="subpage" style="display:none">
            @Html.Partial("_Faq", Model.FAQ)
         </div>
      </div>
   </div>

   <!-- jQuery CDN -->
   <script src="https://code.jquery.com/jquery-1.12.0.min.js"></script>
   <!-- Bootstrap Js CDN -->
   <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

   <script type="text/javascript">
      $(document).ready(function () {
         $('#sidebarCollapse').on('click', function () {
            $('#sidebar').toggleClass('active');

         });
         $('#sidebarCollapse').click();
      });

      function showPage(subpage) {
         var lis = document.getElementsByClassName("sidebar");
         for (var i = 0; i < lis.length; i++) {
            lis[i].className = lis[i].className.replace("active", "");
         }
         var refs = document.getElementsByClassName("subpageRef");
         for (var i = 0; i < refs.length; i++) {
            var dataId = $(refs[i]).attr("data-id");
            if (dataId == subpage) {
               $(refs[i]).toggleClass("active");
            }
         }

         var id = subpage;
         var divs = document.getElementsByClassName("subpage");

         for (var i = 0; i < divs.length; i++) {
            var div = divs[i];

            div.style.display = "none";

            if (div.id == id) {
               div.style.display = "block";
            }
         }
      }
   </script>
</body>
</html>
