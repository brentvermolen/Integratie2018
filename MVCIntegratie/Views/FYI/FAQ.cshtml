@model List<BL.Domain.FAQ>

@{
   ViewBag.Title = "FAQ";
}
<script src="~/Scripts/faq.js"></script>
<link rel="stylesheet" href="~/Content/faq.css">
<h2>FAQ</h2>

<div class="container">
   <div class="col-md-4">
      <ul class="list-group help-group">
         <div class="faq-list list-group nav nav-tabs">
            <a href="#tab1" class="list-group-item active" role="tab" data-toggle="tab">Frequently Asked Questions</a>
            <a href="#tab2" class="list-group-item" role="tab" data-toggle="tab"><i class="mdi mdi-website"></i>De website</a>
            <a href="#tab3" class="list-group-item" role="tab" data-toggle="tab"><i class="mdi mdi-account"></i>Mijn account</a>
            <a href="#tab4" class="list-group-item" role="tab" data-toggle="tab"><i class="mdi mdi-notificatie"></i>Notificaties</a>
            <a href="#tab5" class="list-group-item " role="tab" data-toggle="tab"><i class="mdi mdi-overig"></i>Overige problemen</a>
         </div>
      </ul>
   </div>
   @{
      var intTeller = 0;
   }
   <div class="col-md-8">
      <div class="tab-content panels-faq">
         <div class="tab-pane active" id="tab2">
            <div class="panel-group" id="help-accordion-1">

               @foreach (var faq in Model.Where(m => m.Categorie == BL.Domain.FAQCategorie.Website))
               {
                     var refer = "#web" + intTeller;
                     var id = "web" + intTeller++;
                  
                  if (faq.Beantwoord == true)
                  {
                     <div class="panel panel-default panel-help">
                        <a href="@refer" data-toggle="collapse" data-parent="#help-accordion-1">
                           <div class="panel-heading">
                              <h2>@faq.Vraag</h2>
                           </div>
                        </a>
                        <div id="@id" class="collapse">
                           <div class="panel-body">
                              <p>@faq.Antwoord</p>
                              <p><strong>Voorbeeld: </strong>@faq.Voorbeeld</p>
                           </div>
                        </div>
                     </div>
                  }
               }
            </div>
         </div>
         <div class="tab-pane active" id="tab3">
