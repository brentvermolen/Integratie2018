                              <h2>@faq.Vraag</h2>
                           </div>
                        </a>
                        <div id="@id" class="collapse">
                           <div class="panel-body">
                              <p>@faq.Antwoord</p>
                              @if (faq.Voorbeeld != "")
                              {
                                 <p><strong>Voorbeeld: </strong>@faq.Voorbeeld</p>
                              }
                           </div>
                        </div>
                     </div>
                  }
               }
            </div>
         </div>
         <div class="tab-pane" id="tab4">
            <div class="panel-group" id="help-accordion-3">
               @foreach (var faq in Model.Where(m => m.Categorie == BL.Domain.FAQCategorie.Notificaties))
               {
                  var refer = "#not" + intTeller;
                  var id = "not" + intTeller++;

                  if (faq.Beantwoord == true)
                  {
                     <div class="panel panel-default panel-help">
                        <a href="@refer" data-toggle="collapse" data-parent="#help-accordion-3">
                           <div class="panel-heading">
                              <h2>@faq.Vraag</h2>
                           </div>
                        </a>
                        <div id="@id" class="collapse">
                           <div class="panel-body">
                              <p>@faq.Antwoord</p>
                              @if (faq.Voorbeeld != "")
                              {
                                 <p><strong>Voorbeeld: </strong>@faq.Voorbeeld</p>
                              }
                           </div>
                        </div>
                     </div>
                  }
               }
            </div>
         </div>
         <div class="tab-pane" id="tab5">
            <div class="panel-group" id="help-accordion-4">

               @foreach (var faq in Model.Where(m => m.Categorie == BL.Domain.FAQCategorie.Overig))
               {
                  var refer = "#over" + intTeller;
                  var id = "over" + intTeller++;

                  if (faq.Beantwoord == true)
                  {
                     <div class="panel panel-default panel-help">
                        <a href="@refer" data-toggle="collapse" data-parent="#help-accordion-4">
                           <div class="panel-heading">
                              <h2>@faq.Vraag</h2>
                           </div>
                        </a>
                        <div id="@id" class="collapse">
                           <div class="panel-body">
                              <p>@faq.Antwoord</p>
                              @if (faq.Voorbeeld != "")
                              {
                                 <p><strong>Voorbeeld: </strong>@faq.Voorbeeld</p>
                              }
                           </div>
                        </div>
                     </div>
                  }
               }
            </div>
         </div>
         <div class="tab-pane" id="tab6">
            <div class="panel-group">
               <div id="divVraag" style="display:block">
                  <div class="row">
                     <label style="width:20%" for="vraag">Uw Vraag:</label>
                     <input id="vraag" type="text" value="" placeholder="Stel Hier Uw Vraag..." style="width:60%" class="form-control faqzelfinvullentekstveld" />
                  </div>
                  <div class="row">
                     <label style="width:20%" for="categorie">Categorie:</label>
                     <select style="width:60%" id="categorie" class="form-control faqzelfinvullentekstveld">
                        <option value="0">De Website</option>
                        <option value="1">Mijn Account</option>
                        <option value="2">Notificaties</option>
                        <option value="3">Overige Problemen</option>
                     </select>
                  </div>
                  <div class="row">
                     <input type="button" class="btn btn-success" value="Verzenden" onclick="verzendVraag();" />
                  </div>
               </div>
               <div id="divVerzonden" style="display:none">
                  <p>Uw vraag wordt weergegeven als de beheerder deze heeft gecontroleerd en beantwoord!</p>
               </div>
               <div id="divError" style="display:none">
                  <p>Er is iets misgelopen, probeer later opnieuw...</p>
               </div>
               <div id="divLeeg" style="display:none">
                  <p>Gelieve het veld vraag in te vullen</p>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>