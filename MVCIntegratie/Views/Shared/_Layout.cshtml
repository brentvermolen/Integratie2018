<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Politieke barometer</title>
    <link rel="stylesheet" href="~/Content/Layout.css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only"> Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home")" class=" navbar-brand"><img alt="Logo" src="~/Images/dashboard.png" height="30" /></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", MVC.Home.Index())</li>
                    <li>@Html.ActionLink(Resources.home_index.Over, MVC.FYI.Over())</li>
                    <li>@Html.ActionLink(Resources.home_index.Contact, MVC.FYI.Contact())</li>
                    <li>@Html.ActionLink(Resources.home_index.FAQ, MVC.FYI.FAQ())</li>
                    <li>@Html.ActionLink(Resources.home_index.Rollen, MVC.Role.Index())</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        
        <footer id="footer" style="float:left">
            <hr />
            <p>
                &copy; @DateTime.Now.Year &middot Politieke Barometer &middot; &copy; Bit By Bit
                &middot <a href="@Url.Action("Index", "Home")">Home</a>
                &middot <a href="@Url.Action("Over", "FYI")">@Resources.home_index.Over</a>
                &middot <a href="@Url.Action("Contact", "FYI")">@Resources.home_index.Contact</a>
                &middot <a href="@Url.Action("FAQ", "FYI")">@Resources.home_index.FAQ</a>
            </p>
            <p><a href="#">Back to top</a></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

   </body>
</html>
