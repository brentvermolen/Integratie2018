@using BL
@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Politieke barometer</title>
    <link rel="stylesheet" href="~/Content/Layout.css">
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
@{
    var mng = new GebruikerManager();
    var gebruiker = new BL.Domain.Gebruiker();
    if (User.Identity.IsAuthenticated)
    {
        gebruiker = mng.GetGebruiker(int.Parse(User.Identity.GetUserId()));
    }
}

<body>
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only"> Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home")" class=" navbar-brand"><img alt="Logo" src="~/Images/dashboard.png" height="30" /></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", MVC.Home.Index())</li>
                    <li>@Html.ActionLink("Over", MVC.FYI.Over())</li>
                    <li>@Html.ActionLink("Contact", MVC.FYI.Contact())</li>
                    <li>@Html.ActionLink("FAQ", MVC.FYI.FAQ())</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Deelplatform", MVC.Deelplatform.Registreer())</li>
                        if (gebruiker.isSuperAdmin)
                        {
                            <li>@Html.ActionLink("Adminpage", MVC.Config.SuperAdmin())</li>
                        }
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>

        </div>
    </div>

    @if (!User.Identity.IsAuthenticated)
    {
        <div data-reactroot="" class="login-notice" id="login-notice-id">
            <div class="login-notice-bg"></div>
            <div class="l-text-container">
                <p class="login-notice-text text">Registreer om van alle voordelen van de site te genieten.</p>
                <a class="login-notice-button btn btn-default" href=@Url.Action("Register", "Account")>Registreren</a>
            </div>
        </div>
    }

    <div class="container body-content">
        @RenderBody()

        <footer id="footer" style="float:left">
            <hr />
            <p>
                &copy; @DateTime.Now.Year &middot Politieke Barometer &middot; &copy; Bit By Bit
                &middot <a href="@Url.Action("Index", "Home")">Home</a>
                &middot <a href="@Url.Action("Over", "FYI")">@Resources.lang.Over</a>
                &middot <a href="@Url.Action("Contact", "FYI")">@Resources.lang.Contact</a>
                &middot <a href="@Url.Action("FAQ", "FYI")">@Resources.lang.FAQ</a>
                &middot <a href="https://www.iubenda.com/privacy-policy/72762441" title="Privacy Policy">Privacy Policy<!--class="iubenda-white iubenda-embed " --></a>
                <script type="text/javascript">(function (w, d) { var loader = function () { var s = d.createElement("script"), tag = d.getElementsByTagName("script")[0]; s.src = "https://cdn.iubenda.com/iubenda.js"; tag.parentNode.insertBefore(s, tag); }; if (w.addEventListener) { w.addEventListener("load", loader, false); } else if (w.attachEvent) { w.attachEvent("onload", loader); } else { w.onload = loader; } })(window, document);</script>
            </p>
            <p><a href="#">Back to top</a></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>



<script>
    $(document).ready(function () {
        if (document.URL.includes("Account")
        ) {
            document.getElementById('login-notice-id').style.display = "none";
        }
        else {
            document.getElementById('login-notice-id').style.display = "block;";
        }
    });
</script>
